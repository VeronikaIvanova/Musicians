<%= form_for [@group, @vacancy]  do |f| %>
  <% if @vacancy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vacancy.errors.count, "error") %> prohibited this vacancy from being saved:</h2>

      <ul>
      <% @vacancy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">  
    <select  name="vacancy[instrument_id]" > 
      <option value="" selected="">Select instrument</option>
        <% @instruments.each do |instrument| %>
          <option value="<%= instrument.id %>"><%= instrument.name %></option>
        <% end %>
    </select>  
  </div>


  <div class="field">
    <%= f.text_area :info, placeholder: "Compose new message..." %>
 </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
