
<div class="header_edit">
 <h3>Groups</h3>
</div>
<div class="followings" width="100%"> 
  <div class="panel panel-default">
    <div class="panel-heading" >
	<ul class="nav nav-tabs">
	  <li role="presentation"class="active"><a href="/user_groups/">Subscriptions</a></li>
	  <li role="presentation"><a href="/user_groups/admins/">Administrations</a></li>
	</ul>
    </div> 
  <div class="panel-body">
      <table class="table-striped" width="100%">  
       <% if @groups.any? %>
	 <% @groups.each do |group| %>
        <tr>
	     <td ><%= link_to "#{group.name}", group_path(group.id) %> </td>
	     <td width="30%"><%= button_to "Unfollow", user_to_group_path(group.id),
	           :class => "btn btn-large", :method => :delete %></td> 
           </tr>
           <tr><td > &nbsp;</td><td > &nbsp;</td></tr>        
	<% end %>
      <% else %> 
         <tr> <td align="center"> You are not following any groups. </td> </tr>
      <% end %>  
     </table>
  
     <div class="panel-heading" align="right">
         <%= will_paginate @groups %> 
     </div> 
  </div>
</div>
</div>