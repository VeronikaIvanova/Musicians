
<div class="header_edit">
 <h3>Groups</h3>
</div>
<div class="followings" width="100%"> 
  <div class="panel panel-default">
        <div class="panel-heading">
	<ul class="nav nav-tabs">
	  <li role="presentation"><a href="/user_groups/">Subscriptions</a></li>
	  <li role="presentation"class="active"><a href="/user_groups/admins/">Administrations</a></li>
	</ul>
    </div> 
  <div class="panel-body">
      <table class="table-striped" width="100%">
       <% if @groups_admin.any? %>
	 <% @groups_admin.each do |group| %> 
           <tr>
	     <td><%= link_to "#{group.name}", group_path(group.id) %> </td>
	     <td align="right">    <%= button_to  'Edit', edit_group_path(group), :class => "btn btn-large", method: :get %></td> 
             <td width="2%"> &nbsp;</td>
             <td> <%= button_to  'Destroy', group, method: :delete, :class => "btn btn-large", data: { confirm: 'Are you sure?' } %></td> 
           </tr>
           <tr><td > &nbsp;</td><td > &nbsp;</td><td > &nbsp;</td></tr> 
	<% end %> 
      <% else %> 
         <tr> <td align="center"> You are not administrating any groups. </td> </tr>
      <% end %> 
     </table>

     <div class="panel-heading" align="right">
         <%= will_paginate @groups_admin %> 
     </div> 
  </div>
</div>
  </div>