<div class="header_edit">
 <h3>Concerts</h3>
</div>
<div class="followings" width="100%"> 
  <div class="panel panel-default">
    <div class="panel-heading">
	<ul class="nav nav-tabs">
	  <li role="presentation"><a href="/user_concerts/">Subscriptions</a></li>
	  <li role="presentation"class="active"><a href="/user_concerts/admins/">Administrations</a></li>
	</ul>
    </div> 
  <div class="panel-body">
      <table class="table-striped" width="100%">  
       <% if @concerts_admin.any? %>
	<% @concerts_admin.each do |concert| %>
          <tr>
            <td><%= link_to "#{concert.name}", concert_path(concert.id) %> </td> 
	    <td align="right"> <%= button_to  'Edit', edit_concert_path(concert), :class => "btn btn-large", method: :get %></td>
            <td width="2%"> &nbsp;</td>
            <td > <%= button_to  'Destroy', concert, method: :delete, :class => "btn btn-large", data: { confirm: 'Are you sure?' } %> </td>
          </tr> 
          <tr><td > &nbsp;</td><td > &nbsp;</td><td > &nbsp;</td></tr>              
	<% end %> 
      <% else %> 
         <tr> <td align="center"> You are not administrating any concerts. </td> </tr>
      <% end %> 
     </table>

     <div class="panel-heading" align="right">
         <%= will_paginate @concerts_admin %> 
     </div> 
   </div>
  </div>
</div>