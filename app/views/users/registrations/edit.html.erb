<div class="header_edit">
 <h3>Edit <%= resource_name.to_s.humanize %></h3>
</div>

<div class="editing" width="100%"> 
  <div class="panel panel-default">
    <div class="panel-body">

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
 

      <%= f.text_field :firstname, autofocus: true %>
      <%= f.text_field :lastname %>
      <%= f.date_select :date_of_birth, html: { class: 'selectpicker' } %>   
      <%= f.collection_select :gender_id, Gender.order(:name), :id, :name, include_blank: false, controll_class: "selectpicker" %>
      <%= f.label :Location %> <br />
	  <select class="selectpicker"  name="user[country_name]" >
	    <option value="<%=current_user.country_name %>" selected="">
	      <% if current_user.country_name!=nil %>
		<% CS.countries.each do |k,v| %>
		  <% if k.to_s==current_user.country_name %>      
		    <%=  v %>
		  <% end %> 
		 <% end %> 
	      <% else %>
	       Select Country      
	      <% end %>       
	   </option>
	      <% CS.countries.each do |k, v| %>
		<option value="<%= k %>"><%= v %></option>
	      <% end %>
	  </select>  <br />

	  <select class="selectpicker" name="user[state_name]">
	    <option value=<%=current_user.state_name %> selected="">
	       <% if current_user.state_name!=nil %>
		<% CS.states(current_user.country_name).each do |k,v| %>
		  <% if  k.to_s==current_user.state_name %>      
		    <%=  v %>
		  <% end %> 
		 <% end %> 
	      <% else %>
	       Select State      
	      <% end %>       
	    </option>
	      <% CS.states(current_user.country_name).each do |k,v| %>
		<option value="<%= k %>"><%= v %></option>
	      <% end %>
	  </select> <br />

	  <select class="selectpicker" name="user[city_name]">
	     <option value="<%=current_user.city_name %>" selected="">
	       <% if current_user.city_name!=nil or current_user.city_name!="" %>
		 <%=current_user.city_name %>
	       <% else %>
		 Select City
	       <% end %>
	     </option>
	      <% CS.cities(current_user.state_name).each do |k,v| %>
		<option value="<%= k %>"><%= k %></option>
	      <% end %>
	  </select>
     
      <%= f.text_field :info %>
   
      <%= f.email_field :email %>
      <%= f.password_field :password, autocomplete: "off" %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <%= f.password_field :current_password, autocomplete: "off" %>
	 <div class="participant">
	   <% Instrument.all.each do |instrument| %>
	      <%= check_box_tag "user[instrument_ids][]", instrument.id, f.object.instruments.include?(instrument) %>
	      <%= instrument.name%> <br />
	   <% end %>
         </div> <br />
     
      <div align="right">    
	  <div class="actions">
	    <%= f.submit "Update" %>
	  </div></div>



<script>
$('select[name="user[country_name]"]').change(function() {
  var input_state = $(this);
  var opt;
  var states=$('select[name="user[state_name]"]');
  $.getJSON('/states/' + $(this).val(), function (data) {
    states.empty();
    opt= '<option value="" selected="">Select State</option>'
    $.each(data, function (i, ele) {
      opt+='<option value='+ i +'>' + ele + '</option>';     
    }); states.html(opt);
  });
});
</script>


<script>
$('select[name="user[state_name]"]').change(function() {
  var input_state = $(this);
  var opt;
  var cities=$('select[name="user[city_name]"]');
  $.getJSON('/cities/' + $(this).val(), function (data) {
    cities.empty();
    opt= '<option value="" selected="">Select City</option>'
    $.each(data, function (i, ele) {
      opt+='<option value='+ ele +'>' + ele+ '</option>';     
    }); cities.html(opt);
  });
});
</script>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class => "btn btn-large" %></p>

  </div>
  </div>
</div>



